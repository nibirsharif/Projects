                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <Button x:Name="btn1" Content="1" HorizontalAlignment="Left" Style="{StaticResource CircularButtonStyle}" Height="40" Width="40" Margin="10,55,10,22" Click="btn1_Click" />
