                                    <SolidColorBrush Color="{StaticResource PhoneButtonBasePressedForegroundColor}"/>
                                </Button.Foreground>
                            </Button>

                            <Button Margin="0,70,0,0" x:Name ="CancelButton1" Content="Submit" HorizontalAlignment="Right" Width="200" VerticalAlignment="Top" Style="{StaticResource ButtonStyle1}" Background="#639d41" BorderBrush="#639d41" FontSize="26.667" Click="CancelButton1_Click">
